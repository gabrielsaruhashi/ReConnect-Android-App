<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goprojectreconnect.projectreconnect.Fragments.DialogFragments.InvitationDialogFragment">


    <EditText
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Send a message introducing yourself!"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/ivSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/etMessage"
        android:layout_below="@id/etMessage"
        android:layout_marginTop="@dimen/element_margin"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_plane" />

</RelativeLayout>
