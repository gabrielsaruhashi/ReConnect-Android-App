<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_marginTop="@dimen/rv_margin_top"
        android:layout_width="@dimen/imageview_profile"
        android:layout_height="@dimen/imageview_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/com_facebook_blue" />


    <TextView
        android:id="@+id/tvName"
        android:layout_marginTop="@dimen/rv_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfilePicture"
        android:layout_marginLeft="@dimen/element_margin"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvLastMessageTime"
        android:layout_marginTop="@dimen/rv_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="Textview"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="Textview"
        android:layout_below="@id/tvName"
        android:layout_alignStart="@id/tvName"
        android:layout_alignLeft="@id/tvName" />
</RelativeLayout>